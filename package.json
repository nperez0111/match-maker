{
  "name": "match-maker",
  "version": "0.0.1",
  "description": "A storage, transport & runtime agnostic Y.js server/provider. Built on web primitives, supports subdocs, and handles everything without in-memory storage. Perfect for collaborative apps! ðŸš€",
  "keywords": [
    "yjs",
    "server",
    "provider",
    "storage",
    "transport",
    "runtime",
    "subdocs"
  ],
  "repository": "nperez0111/match-maker",
  "license": "MPL-2.0",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./provider": {
      "types": "./dist/provider.d.mts",
      "default": "./dist/provider.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint . && prettier -c src playground",
    "lint:fix": "automd && eslint . --fix && prettier -w src playground",
    "prepack": "pnpm build",
    "play:bun": "PORT=1234 bun run --watch ./playground/websocket.ts",
    "play:cf": "wrangler dev -c ./playground/wrangler.toml --port 3000",
    "play:deno": "PORT=3000 deno run --unstable-byonm -A ./playground/deno.ts",
    "play:node": "PORT=3000 jiti ./playground/node.ts",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "crossws": "0.4.1",
    "db0": "0.3.2",
    "lib0": "^0.2.108",
    "pino": "9.7.0",
    "srvx": "0.8.0",
    "unstorage": "1.16.0",
    "y-protocols": "^1.0.6"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "automd": "^0.3.12",
    "changelogen": "^0.5.7",
    "eslint": "^9.12.0",
    "eslint-config-unjs": "^0.4.1",
    "jiti": "^2.3.3",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "yjs": "^13.6.20"
  },
  "packageManager": "pnpm@10.12.1"
}
